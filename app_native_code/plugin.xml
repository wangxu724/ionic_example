<?xml version="1.0" encoding="UTF-8" ?>

<plugin xmlns="http://www.phonegap.com/ns/plugins/1.0" xmlns:android="http://schemas.android.com/apk/res/android" id="app-native-code" version="0.0.1">
    <name>app-native-code-plugin</name>
    <description>App native code</description>
    <license>Apache 2.0</license>
    <engines>
        <engine name="cordova" version=">=5.0.0" />
    </engines>

    <js-module src="www/appNativeCode.js" name="AppNativeCode">
        <clobbers target="AppNativeCode" />
    </js-module>
    <hook type="before_prepare" src="hooks/copy_files.js" />

    <!-- android -->
    <platform name="android">
        <source-file src="src/android/plugins/AppNativeCodePlugin.java" target-dir="com/myapp/plugins" />
        <source-file src="src/android/GeofenceTransitionReceiver.java" target-dir="com/myapp" />

        <config-file target="config.xml" parent="/*">
            <feature name="AppNativeCodePlugin">
                <param name="android-package" value="com.myapp.plugins.AppNativeCodePlugin" />
            </feature>
        </config-file>

        <config-file target="AndroidManifest.xml" parent="/manifest/application">
            <receiver
                android:name="com.myapp.GeofenceTransitionReceiver"
                android:permission="com.geofence.permission.GEOFENCE_TRANSITION_BROADCAST">
                <intent-filter>
                    <action android:name="com.geofence.GEOFENCE_TRANSITION" />
                </intent-filter>
            </receiver>
        </config-file>
    </platform>

    <!-- ios -->
    <platform name="ios">
        <source-file src="src/ios/plugins/AppNativeCode-Plugin-Bridging-Header.h"/>
        <source-file src="src/ios/plugins/AppNativeCodePlugin.swift"/>
        <source-file src="src/ios/AppUtility.swift"/>
        <source-file src="src/ios/AppUserNotificationCenterDelegate.swift"/>

        <config-file target="config.xml" parent="/*">
            <feature name="AppNativeCodePlugin">
                <param name="ios-package" value="AppNativeCodePlugin"/>
            </feature>
        </config-file>

        <framework src="UserNotifications.framework" />
    </platform>
</plugin>
